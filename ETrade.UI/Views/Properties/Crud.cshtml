@model ETrade.UI.Models.ViewModel.PropertiesModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>@Model.Head</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Properties.PropertyId" />
            <div class="form-group">
                <label>Ad</label>
                <input asp-for="Properties.PropertyName" class="form-control" />
                
            </div>
            @*<div class="form-group">
            <input type="hidden" name="@Model.Categories.Id" class="form-control" />
            </div>*@
            @*PRICE*@
            <div class="form-group">
                <label>Unit Price</label>
                <input asp-for="Properties.UnitPrice" class="form-control" />
                
            </div>

            <div class="form-group">
                <label>Foods</label>
                <select name="Properties.FoodId">
                    @foreach (var item in Model.FoodDTOs)
                    {
                        <option selected value="@item.Id" class="form-control">@item.FoodName</option>
                    }
                </select>
            </div>
            @*<div class="form-group">
            <input type="hidden" name="@Model.Properties.PropertyId" class="form-control" />
            </div>*@
            <div class="form-group">
                <input type="submit" value="@Model.Text" class="@Model.Class" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List" class="btn btn-outline-warning">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ETrade.UI</title>
@*    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ETrade.UI.styles.css" asp-append-version="true" />*@
    <script src="https://cdn.tailwindcss.com?plugins=forms,typography,aspect-ratio,line-clamp"></script>

</head>
<body>
    <header>
        <nav class="flex justify-between bg-neutral-900 text-neutral-100">
            <div class="px-5 xl:px-12 py-6 flex w-full items-center">
                <a to="/" class="text-3xl font-bold font-heading">
                <img class="h-9" src="./logo.png" alt="logo" />
                </a>
                <ul class="hidden md:flex px-4 mx-auto font-semibold font-heading space-x-12">
                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="Index"  
                              class="px-3 py-2 hover:text-neutral-200 hover:bg-neutral-800 rounded-lg">
                        Home
                        </a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="Index"
                           class="px-3 py-2 hover:text-neutral-200 hover:bg-neutral-800 rounded-lg">
                        Categories
                        </a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Foods" asp-action="List"
                           class="px-3 py-2 hover:text-neutral-200 hover:bg-neutral-800 rounded-lg">
                        Foods
                        </a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Properties" asp-action="List"
                           class="px-3 py-2 hover:text-neutral-200 hover:bg-neutral-800 rounded-lg">
                        Properties
                        </a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Categories" asp-action="List"
                           class="px-3 py-2 hover:text-neutral-200 hover:bg-neutral-800 rounded-lg">
                            Categories
                        </a>
                    </li>
                </ul>
                <div class="hidden xl:flex items-center space-x-5">
                    <a to="liked" class="hover:text-neutral-200">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
                        </svg>
                    </a>
                    <a to="/sepet" class="flex items-center hover:text-neutral-200">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 10.5V6a3.75 3.75 0 10-7.5 0v4.5m11.356-1.993l1.263 12c.07.665-.45 1.243-1.119 1.243H4.25a1.125 1.125 0 01-1.12-1.243l1.264-12A1.125 1.125 0 015.513 7.5h12.974c.576 0 1.059.435 1.119 1.007zM8.625 10.5a.375.375 0 11-.75 0 .375.375 0 01.75 0zm7.5 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" />
                        </svg>
                        <span class="flex absolute place-content-center -mt-5 ml-4">
                            <span class="animate-ping absolute top-[2px] inline-flex h-3 w-3 rounded-full bg-orange-400 opacity-75" />
                            <span class="relative inline-flex rounded-full h-4 w-4 bg-orange-500 text-[9px] place-items-center place-content-center font-bold">
                                2
                            </span>
                        </span>
                    </a>
                    <button class="flex flex-col relative"
                           >
                        <div class="flex place-items-center">
                            <img class="h-8 w-8 rounded-full"
                                 src="https://randomuser.me/api/portraits/men/25.jpg"
                                 alt="" />
                            <div class="ml-3">
                                <p class="text-sm text-left font-medium text-neutral-100">
                                    Kadir
                                </p>
                                <p class="text-sm text-slate-500 truncate">
                                    keparlak@gmail.com
                                </p>
                            </div>
                        </div>
                        <ul ref={btnRef}
                            class="w-full opacity-0 transition-opacity  duration-300 ease-in-out absolute p-2 top-10 shadow-xl overflow-hidden rounded-lg z-10 text-neutral-900 bg-neutral-100">
                            
                            <li>
                                <a to="admin"
                                      class="py-2 px-6 text-sm rounded block hover:bg-neutral-900 hover:text-neutral-100">
                                Admin
                                </a>
                            </li>
                            <a to="myorders"
                                  class="p-2 text-sm rounded block hover:bg-neutral-900 hover:text-neutral-100">
                            Siparişlerim
                            </a>

                            <span class="p-2 text-sm rounded block hover:bg-neutral-900 hover:text-neutral-100"
                                 >
                                Logout
                            </span>
                        </ul>
                    </button>
                    <a to="/login"
                          class="flex items-center gap-2 hover:text-neutral-200">
                    <UserCircleIcon class="h-6 w-6 hover:text-neutral-200" />
                    Login
                    </a>
                    </>
                </div>
            </div>
            <a to="/sepet" class="xl:hidden flex mr-6 items-center">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-6 w-6 hover:text-neutral-200">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 10.5V6a3.75 3.75 0 10-7.5 0v4.5m11.356-1.993l1.263 12c.07.665-.45 1.243-1.119 1.243H4.25a1.125 1.125 0 01-1.12-1.243l1.264-12A1.125 1.125 0 015.513 7.5h12.974c.576 0 1.059.435 1.119 1.007zM8.625 10.5a.375.375 0 11-.75 0 .375.375 0 01.75 0zm7.5 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" />
                </svg>
            <span class="flex absolute -mt-5 ml-4">
                <span class="animate-ping absolute inline-flex h-3 w-3 rounded-full bg-orange-400 opacity-75" />
                <span class="relative inline-flex rounded-full h-3 w-3 bg-orange-500 place-content-center font-bold text-[9px]">
                    2
                </span>
            </span>
            </a>
            <div class="navbar-burger self-center mr-12 xl:hidden">
                <button class="flex flex-col relative">
                    <div class="flex place-items-center">
                        <img class="w-8 rounded-full"
                             src="https://randomuser.me/api/portraits/men/25.jpg"
                             alt="" />
                    </div>
                    <ul
                        class="opacity-0 transition-opacity duration-300 ease-in-out min-w-max absolute p-2 right-0 top-10 shadow-xl overflow-hidden rounded-lg z-10 text-neutral-900 bg-neutral-100">
                        <li>
                            <div class="mb-3 py-2 px-6  rounded block bg-neutral-900 text-neutral-100">
                                <p class="text-xs text-left font-bold text-neutral-100">
                                    Kadir
                                </p>
                                <p class="text-xs text-slate-500 truncate">
                                    keparlak@gmail.com
                                </p>
                            </div>
                        </li>
                        <li>
                            <a to="admin"
                                  class="py-2 px-6 text-sm rounded block hover:bg-neutral-900 hover:text-neutral-100">
                            Admin
                            </a>
                        </li>
                        <li>
                            <a to="myorders"
                                  class="py-2 px-6 text-sm rounded block hover:bg-neutral-900 hover:text-neutral-100">
                            Siparişlerim
                            </a>
                        </li>
                        <li class="py-2 px-6 text-sm rounded block hover:bg-neutral-900 hover:text-neutral-100">
                            <a to="liked" class="hover:text-neutral-200">
                            Favoriler
                            </a>
                        </li>
                        <li>
                            <span class="p-2 px-6  text-sm rounded block hover:bg-neutral-900 hover:text-neutral-100"
                                  >
                                Logout
                            </span>
                        </li>
                    </ul>
                </button>
                <Bars3Icon class="h-6 w-6 hover:text-neutral-200" />
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ETrade.UI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

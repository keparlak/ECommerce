@model ETrade.UI.Models.ViewModel.FoodsModel

@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>@Model.Head</h1>



<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Foods.FoodId" />
			<div class="form-group">
				<label>Food Name</label>
				<input asp-for="Foods.FoodName" class="form-control" />
			</div>
			<div class="form-group">
				<label>Desc</label>
				<input asp-for="Foods.Description" class="form-control" />
			</div>
			<div class="form-group">
				<label>Img</label>
				<input asp-for="Foods.Img" class="form-control" />
			</div>
			<div class="form-group">
				<label>Categories</label>
				<select name="Foods.CategoryId">
					@foreach (var item in Model.Cats)
					{
						@if (item.Id == Model.Foods.CategoryId)
						{
							<option selected value="@item.Id" class="form-control">@item.CategoryName</option>
						}
						else
						{
							<option value="@item.Id" class="form-control">@item.CategoryName</option>
						}

					}

				</select>
			</div>
			<div class="form-group">
				<input type="submit" value="@Model.Text" class="@Model.Class" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="List" class="btn btn-outline-warning">Back to List</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}